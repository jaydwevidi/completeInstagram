<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/postDetails"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:padding="5dp"
                android:id="@+id/uploaderDPImage"
                android:layout_width="80dp"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_height="match_parent"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/postCreatorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Last"
                    android:layout_gravity="start"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "10 minutes ago"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    />
            </LinearLayout>
            <ImageButton
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="0dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_more_horiz_24"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/postDetails" >

            <tag android:id="@+id/zoomable" android:value="ZoomableViewTag" />
        </ImageView>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/postImage">

            <TextView
                android:layout_width="wrap_content"
                android:paddingHorizontal="0dp"
                android:layout_height="match_parent"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_baseline_favorite_24"
                android:text="342k"
                android:gravity="center"/>
            <Space
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:paddingHorizontal="0dp"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_baseline_message_24"
                android:text="342k"
                android:gravity="center"/>

            <Space
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView

                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:paddingHorizontal="0dp"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_svgviewer_output"
                android:text="32k"
                android:gravity="center"/>
            <Space
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:paddingHorizontal="0dp"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_baseline_share_24"

                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/profilename2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="captionihf as"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/caption"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="captioni asfasdfahd fasd fasdhfasdhf askdhfask"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>