<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.DashboardActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:padding="5dp"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close_cross_in_circular_outlined_interface_button_svgrepo_com" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Post :"
            android:textStyle="bold"
            android:textSize="25dp" />



        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/postPictureButton"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginHorizontal="5dp"
            android:foregroundGravity="right"
            android:src="@drawable/ic_baseline_arrow_forward_24" />
    </LinearLayout>

    <ImageView
        android:id="@+id/selectedImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <tag android:id="@+id/zoomable" android:value="ZoomableViewTag" />
    </ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Gallery" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_camera_alt_24"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gridImagesRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>